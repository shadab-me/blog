   <section class="hero">

  <header class="flex js-bt">
    <div class="brand"> 
   <h2>Logo</h2>
     </div>
     <nav>
        <ul class="flex">
            <li><a href="index.ejs">Home</a></li>
            <li><a href="#feature">Features</a></li>
            <li><a href="/Articles">Blogs</a></li>
         </ul>
     </nav>
     </div>
</header>  
   <main class="container flex js-bt">
<div class="col-50 hero-img">
<img src="/images/homePageImage.svg" width="48px">
</div>
<div class="col-50 m-5 hero-text">
<h1 class="hero-heading"> <strong>Discover <br> new technology </h1>
<p class="hero-title">Johannes is a theme carefully designed and developed to get the most out of the new WordPress editor. Unleash the power of blocks - an awesome new way of creating rich content in WordPress!</p>
<a href="/articles" class="hero-btn">Find More</a>
</div>
</main>
</section>  

<section class="advantage" id = "feature">
    <h3>Feature articles</h3>
    <div class="container flex js-bt">
      <% articles.slice(0, 5).forEach(article => { %>
          <div class="col-20 flex js-bt">
            <img src="/images/blog.jpg" width="100%">
            <span class="tag">Category</span>
            <%=article.title %> 
      </div>
   <% }); %>
     </div>
</section>
